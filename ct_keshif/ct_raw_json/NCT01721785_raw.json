    "clinical_study": {
        "@rank": "144476", 
        "arm_group": [
            {
                "arm_group_label": "Primary staging group I", 
                "description": "All patients will be treated according to standard practice of the concerning hospital.\nPatients in group I are patients that will be stratified for direct surgery (TME) or a short-course of radiotherapy (5x5 Gy) followed by immediate TME.\nGroup I will undergo only a staging MRI, including gadofosveset-enhanced MRI."
            }, 
            {
                "arm_group_label": "Restaging group II", 
                "description": "All patients will be treated according to standard practice of the concerning hospital.\nPatients in group II are patients that will be stratified for a long course of chemoradiotherapy.\nGroup II will undergo a staging MRI, a re-staging MRI and a optional sigmoidoscopy as part of restaging. MRI includes diffusion-weighted imaging and gadofosveset-enhanced MRI."
            }
        ], 
        "brief_summary": {
            "textblock": "The purpose of this study is to determine the clinical value of the novel MRI-techniques DWI\n      and gadofosveset-enhanced MRI for the management of rectal cancer patients."
        }, 
        "brief_title": "Diagnostic Value of Novel MR Imaging Techniques for the Primary Staging and Restaging of Rectal Cancer", 
        "completion_date": {
            "#text": "June 2015", 
            "@type": "Anticipated"
        }, 
        "condition": [
            "Rectal Neoplasms", 
            "Magnetic Resonance Imaging", 
            "Neoplasms Staging"
        ], 
        "condition_browse": {
            "mesh_term": [
                "Neoplasms", 
                "Rectal Neoplasms"
            ]
        }, 
        "detailed_description": {
            "textblock": "Rectal cancer is a common form of cancer, and the treatment stratification depends on tumour\n      and nodal stage as determined on MRI. Unfortunately, the information provided by standard\n      T2-weighted MRI is not sufficient to accurately assess nodal involvement and tumour response\n      after neo-adjuvant chemoradiotherapy. Additional functional information is required for\n      reliable (re)staging. Diffusion-weighted imaging and gadofosveset-enhanced MRI are two new\n      imaging techniques that have all shown great potential in rectal cancer staging. In order to\n      provide definite evidence there is a need for a multicenter study with a large patient\n      population."
        }, 
        "eligibility": {
            "criteria": {
                "textblock": "Inclusion Criteria:\n\n          -  Biopsy proven primary rectal cancer (\u226415 cm from the anorectal verge as measured in\n             MRI)\n\n          -  Age > 18 years\n\n          -  Written informed consent\n\n        Exclusion Criteria:\n\n          -  Ineligibility to undergo MRI (claustrophobia, pacemaker, non-MR compatible surgical\n             implants, metal fragments in the eye)\n\n          -  Pregnancy\n\n          -  Locally recurrent rectal cancer\n\n          -  A history of severe allergy to contrast agents\n\n          -  Ineligibility to receive gadofosveset contrast (history of contrast allergy, impaired\n             kidney function with a Glomerular Filtration Rate <30 ml/min/1.73m2\n\n          -  Incurable disease due to metastases or co-morbidity"
            }, 
            "gender": "Both", 
            "healthy_volunteers": "No", 
            "maximum_age": "N/A", 
            "minimum_age": "18 Years", 
            "sampling_method": "Non-Probability Sample", 
            "study_pop": {
                "textblock": "All patients diagnosed with rectal cancer in one of the participating centres will be\n        considered for inclusion in the study."
            }
        }, 
