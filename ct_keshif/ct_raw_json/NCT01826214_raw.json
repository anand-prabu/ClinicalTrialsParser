    "clinical_study": {
        "@rank": "25014", 
        "arm_group": [
            {
                "arm_group_label": "LDE225-400", 
                "arm_group_type": "Experimental", 
                "description": "Approximately 40 patients with relapsed/refractory AML or ALL and elderly patients with untreated AML (if deemed to be unsuitable for standard chemotherapy) will be randomized to Schedule A, and receive 400 mg LDE225 twice daily for the first two weeks only. After two weeks, patients on Schedule A will receive 800 mg LDE225 once daily until disease progression, toxicity, withdrawal of consent, death, discretion of the investigator or early termination of the study."
            }, 
            {
                "arm_group_label": "LDE225-800", 
                "arm_group_type": "Experimental", 
                "description": "Approximately 40 patients with relapsed/refractory AML or ALL and elderly patients with untreated AML (if deemed to be unsuitable for standard chemotherapy) will be randomized to Schedule B, and receive 400 mg LDE225 once daily until disease progression, toxicity, withdrawal of consent, death, discretion of the investigator or early termination of the study."
            }
        ], 
        "brief_summary": {
            "textblock": "The study will evaluate the efficacy, safety and tolerability of two dosing schedules of\n      LDE225 in patients with relapsed/refractory acute leukemia or elderly patients with\n      untreated acute leukemia."
        }, 
        "brief_title": "Study of Efficacy and Safety of LDE225 in Adult Patients With Relapsed/Refractory Acute Leukemia", 
