    <measure>Adenoma detection rate</measure>
    <time_frame>1 week</time_frame>
    <safety_issue>No</safety_issue>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">20</enrollment>
  <condition>Colon Adenoma</condition>
  <arm_group>
    <arm_group_label>Standard monitor (24&quot;)</arm_group_label>
