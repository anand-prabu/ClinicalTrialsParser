  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  healthy children

          -  age between 10 to 12 years of age

        Exclusion Criteria:

          -  cognitive impairment

          -  vegetarian diet

          -  use of creatine in the past 6 months

          -  chronic kidney disease
