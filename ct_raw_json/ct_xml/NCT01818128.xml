  <primary_outcome>
    <measure>Number of participants with intubation to right mainstem bronchus</measure>
    <time_frame>An expected average of 5minutes after intubation</time_frame>
    <safety_issue>No</safety_issue>
  </primary_outcome>
  <secondary_outcome>
    <measure>Number of participants with airway injury</measure>
    <time_frame>An expected average of 5 minutes after bilateral lung ventilation</time_frame>
    <safety_issue>No</safety_issue>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">1540</enrollment>
  <condition>Double Lumen Tube Intubation</condition>
  <arm_group>
    <arm_group_label>Neutral shape of bronchial tip</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
  </arm_group>
  <arm_group>
    <arm_group_label>Bent shape of bronchial tip</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
  </arm_group>
  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Neutral shape of bronchial tip</intervention_name>
    <description>Intubation is performed without transforming the shape of the bonchial tipof a double lumen tube.</description>
    <arm_group_label>Neutral shape of bronchial tip</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Bent shape of bronchial tip</intervention_name>
    <description>Intubation is performed with the double lumen tube, which bronchial tip has been bent 45 degrees and maintained for 5 min.</description>
    <arm_group_label>Bent shape of bronchial tip</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Patients undergoing thoracic surgery that require the placement of left-sided
             double-lumen tubes

        Exclusion Criteria:

          -  Abnormal anatomy of tracheobronchial tree

          -  Intraluminal lesion in the left or right mainstem bronchus

          -  Anticipated difficult intubation
      </textblock>
    </criteria>
    <gender>Both</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>85 Years</maximum_age>
