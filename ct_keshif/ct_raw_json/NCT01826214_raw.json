        }, 
        "responsible_party": {
            "responsible_party_type": "Sponsor"
        }, 
        "secondary_outcome": [
            {
                "description": "ORR is the rate of CR, CRi or PR according to IWG criteria. CR, CRi or PR will be assessed through bone marrow biopsy/aspirate and peripheral blood blasts counts.", 
                "measure": "Overall Response Rate (ORR) on two different dosing schedules of LDE225 in acute leukemia", 
                "safety_issue": "No", 
                "time_frame": "Every 8 weeks for the first 6 months and every 12 weeks until 53 weeks after the last patient is enrolled or until relapse"
            }, 
            {
                "description": "Safety and tolerability will be assessed based on the frequency of adverse events and number of laboratory values that fall outside of pre-determined ranges.  Additional safety assessments include ECG, vital signs and SAEs.", 
                "measure": "Safety and tolerability of two different dosing schedules of LDE225 in acute leukemia", 
                "safety_issue": "Yes", 
                "time_frame": "Screening to 30 days post treatment discontinuation"
            }, 
            {
                "description": "PK parameters include: -Tmax, Cmax, Ctrough, and AUC0-8h for all patients\n- AUC0-24h, CL/F and Racc for 800 mg QD arm only", 
                "measure": "Characterization of the pharmacokinetics (PK) of two different dosing schedules of LDE225", 
                "safety_issue": "No", 
                "time_frame": "Weekly for the first 9 weeks, Week 11, every 2 weeks until CR and every 4 weeks post CR"
            }
