  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  preterm infants (&lt;37weeks of gestational age)

          -  requiring ventilator care

          -  informed consent

        Exclusion Criteria:

          -  major anomaly

          -  48hrs after birth

          -  requiring operation during drug infusion

          -  cord blood pH &lt; 7.0

          -  intraventricular hemorrhage grade III or more

          -  investigators decision
      </textblock>
    </criteria>
    <gender>Both</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>48 Hours</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
