            }, 
            {
                "arm_group_label": "Group 3", 
                "arm_group_type": "Experimental", 
                "description": "Cohort B, post-transplant Group 3. Participants without cirrhosis (fibrosis stage F0-F3) and with no evidence of hepatic decompensation will be randomized to receive either 12 or 24 weeks of LDV/SOF FDC plus RBV."
            }, 
            {
                "arm_group_label": "Group 4", 
                "arm_group_type": "Experimental", 
                "description": "Cohort B, post-transplant Group 4. Participants with cirrhosis and mild hepatic impairment (CPT Class A) will be randomized to receive either 12 or 24 weeks of LDV/SOF FDC plus RBV."
            }, 
            {
                "arm_group_label": "Group 5", 
                "arm_group_type": "Experimental", 
